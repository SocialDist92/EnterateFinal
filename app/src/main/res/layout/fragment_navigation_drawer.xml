<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    tools:context="com.app.jonatan.enteratechihuahua.fragments.FragmentNavigationDrawer">
    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-27dp">

        <ImageView
            android:id="@+id/cover"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/noche"
            />
        <com.pkmmte.view.CircularImageView
            android:id="@+id/profile_image"
            android:src="@drawable/anonymous"
            android:layout_centerVertical="true"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="40dp"
            app:border="true"
            app:border_color="@android:color/white"
            app:border_width="4dp"
            app:shadow="true" />

        <RelativeLayout
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/enterate"
                android:layout_marginLeft="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="entÃ©rate "
                android:textSize="20dp"
                android:textColor="@android:color/white"
                />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:layout_toRightOf="@id/enterate"
                android:textColor="@android:color/white"
                android:text="Usuario" />

            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_below="@+id/enterate"
                android:layout_height="1dp"
                android:background="@color/colorAccent" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="enterate@gmail.com"
                android:textColor="@android:color/white"
                android:layout_below="@+id/line"
                android:layout_marginRight="12dp"
                android:gravity="right"
                style="@style/TextAppearance.AppCompat.Small" />
            <Button
                android:id="@+id/logoutBtn"
                android:layout_below="@+id/line"
                android:layout_width="50dp"
                android:text="LogOut"
                android:textSize="10dp"
                android:textColor="#ffff"
                android:visibility="visible"
                android:layout_height="18dp"
                android:background="@color/colorPrimary" />
        </RelativeLayout>

    </FrameLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/frame">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/drawerList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </RelativeLayout>

</RelativeLayout>
