<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_material_light"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:padding="20dp"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/placeImg"

            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/profile"
            />

        <TextView
            android:id="@+id/place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:textColor="#ffff"
            android:text="Starbucks"
            android:layout_alignTop="@+id/placeImg"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="#ffff"
            android:text="Starbucks"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/place" />

    </RelativeLayout>

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="150dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.app.jonatan.enteratechihuahua.activities.PromotionDetail" />

      <RelativeLayout
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:gravity="bottom"
          android:layout_centerInParent="true"
          android:layout_below="@+id/map">

          <ImageView
              android:id="@+id/facebook"
              android:layout_width="60dp"
              android:layout_height="60dp"
              android:src="@drawable/facebook"/>
          <ImageView
              android:id="@+id/twitter"
              android:layout_width="60dp"
              android:layout_height="60dp"
              android:src="@drawable/twitter"
              android:layout_toRightOf="@+id/facebook"
              />
          <ImageView
              android:id="@+id/instagram"
              android:layout_width="60dp"
              android:layout_height="60dp"
              android:src="@drawable/instagram"
              android:layout_toRightOf="@+id/twitter"
              />
          <ImageView
              android:id="@+id/pinterest"
              android:layout_width="60dp"
              android:layout_height="60dp"
              android:src="@drawable/pinterest"
              android:layout_toRightOf="@+id/instagram"
              />


      </RelativeLayout>
    </RelativeLayout>
